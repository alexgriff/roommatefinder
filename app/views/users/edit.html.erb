
<h1>Additional Details</h1>

<%= form_for @user do |f| %>
  <%= f.label :has_apartment, "Has Apartment?" %>
  <%=f.check_box :has_apartment, {}, true, false  %> <br>
  <%= f.label :max_rent, "Maximum Rent" %>
  <%= f.text_field :max_rent %><br>
  <%= f.label :dealbreakers%><br>
  <%= f.text_area :dealbreakers, placeholder:  "Don't just  list- be specific!" %><br>
  <h3>How do you describe your ideal match</h3>
  <%= f.fields_for :desired_match_trait do |trait| %>
    
   <%= trait.label :gender, "Desired Gender" %>
   <%= trait.select :gender, ['M', 'F', "Other"]%><br>

  
    <%= trait.label :move_in_date %>
    <%= trait.date_select :move_in_date, {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year + 1}, {required: true} %><br>

    <!-- dropdown -->
    <%= trait.label :min_age %>
    <%= trait.select :min_age, 0..99 %><br>
    
    <%= trait.label :max_age %>
    <%= trait.select :max_age, 0..99 %><br>

    <%= trait.label :city %>
    <%= trait.text_field :city %>
    <% end %>
  <%= f.submit %>
<% end %>


