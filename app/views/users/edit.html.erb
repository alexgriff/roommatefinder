<div class="container">
  <div class="col-sm-8 col-sm-offset-1">
    <div class="row">
      <div class="col-sm-6">
        <h1><%= @user.name %></h1>
        <p><em><%= @user.has_apartment ? "Has an apartment" : "Looking for an apartment" %></em></p>
      </div>
      <div class="col-sm-6">
        <p><strong>Age:</strong> <%= @user.convert_age %></p>
        <p><strong>Gender:</strong> <%= @user.gender %></p>
        <p><small><%= link_to "Edit Your User Info", edit_user_path(@user) %></small></p>
      </div>
    </div>
    <div class="row">
      <h4>Your profile is <%= @user.profile_percent_complete %>% complete</h4>
    </div>
    <div class="row">
      <%= render 'layouts/questions_navbar', user: @user %>
    </div>
    <div class="row">
      <h1>Upate Your User Info</h1>
      <%= render "form", user: @user %>
  </div>
</div>
