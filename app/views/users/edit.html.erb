
<h1>Additional Details</h1>

<%= form_for @user do |f| %>
  <%= f.label :has_apartment %>
  <%=f.check_box :has_apartment, {}, true, false  %> <br>
  <%= f.label :max_rent %><br>
  <%= f.text_field :max_rent %><br>
  <%= f.label :dealbreakers%><br>
  <%= f.text_area :dealbreakers, placeholder:  "Don't just  list- be specific!" %><br>
  <%= f.submit %>
<% end %>
