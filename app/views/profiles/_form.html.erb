
<%= form_for profile,  url: user_profiles_path(user) do |f| %>
  <%= f.fields_for :cleanliness do |cleanliness_form| %>
    <%= cleanliness_form.label :kitchen %>
    <%= cleanliness_form.text_field :kitchen %>
    <%= cleanliness_form.label :bathroom %>
    <%= cleanliness_form.text_field :bathroom %>
    <%= cleanliness_form.label :common_space %>
    <%= cleanliness_form.text_field :common_space %>
  <% end %>
  <br/>
  <%= f.fields_for :schedule do |schedule_form| %>
    <%= schedule_form.label :work %>
    <%= schedule_form.text_field :work %>
    <%= schedule_form.label :sleep %>
    <%= schedule_form.text_field :sleep %>
    <%= schedule_form.label :bathroom %>
    <%= schedule_form.text_field :bathroom %>
    <%= schedule_form.label :kitchen %>
    <%= schedule_form.text_field :kitchen %>
  <% end %>
  <br/>
  <%= f.fields_for :habit do |habit_form| %>
    <%= habit_form.label :drinking %>
    <%= habit_form.text_field :drinking %>
    <%= habit_form.label :four_twenty %>
    <%= habit_form.text_field :four_twenty %>
    <%= habit_form.label :partying %>
    <%= habit_form.text_field :partying %>
    <%= habit_form.label :overnight_visitors %>
    <%= habit_form.text_field :overnight_visitors %>
    <%= habit_form.label :music %>
    <%= habit_form.text_field :music %>
  <% end %>
  <br/>
  <%= f.submit %>
<% end %>


